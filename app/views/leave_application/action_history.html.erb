<% @page_title = "Action History" %>

<br>

<%= link_to("<< Homepage", root_path, :class => 'action_view') %>

<br>
<br>
  &nbsp <%= link_to('Worklist', leave_application_worklist_path, :class => 'action_view') %>

<div class="apply-history index">
  <h2>Action History</h2>

  
  <p></p>
  <table id="all_applications" class="view_table" summary="Action History">
    <tr>
      <th>Request ID</th>
      <th>Applicant</th>
      <th>From Date</th>
      <th>To Date</th>
      <th>Reason</th>
      <th>Status</th>
      <th>View Details</th>
    </tr>
    <% @leaves.each do |leave| %>
    <tr>
      <td><%= leave.id %></td>
      <td><%= leave.applicant.first_name + " " + leave.applicant.last_name %></td>
      <td><%= leave.from_date %></td>
      <td><%= leave.to_date %></td>
      <td><%= leave.reason %></td>
      <td><%= leave.leave_status %></td>
      <td class="actions">
        <%= link_to('View', "/leave_application/show_action/#{leave.id}", :class => 'action_view') %>
      </td>
    </tr>
    <% end %>
  </table>

</div>
