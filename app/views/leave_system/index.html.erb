<% @page_title = "Apply History" %>

<br>

<%= link_to("<< Homepage", root_path, :class => 'action_view') %>

<br>
<br>
  <%= link_to('Apply for leave', new_leave_system_path, :class => 'action_view') %>

<div class="apply-history index">
  <h2>Apply History</h2>

  
  <p></p>
  <table id="all_applications" class="view_table" summary="Apply History">
    <tr>
      <th>Request ID</th>
      <th>From Date</th>
      <th>To Date</th>
      <th>Reason</th>
      <th>Approver</th>
      <th>Status</th>
      <th>View Details</th>
    </tr>
    <% @leaves.each do |leave| %>
    <tr>
      <td><%= leave.id %></td>
      <td><%= leave.from_date %></td>
      <td><%= leave.to_date %></td>
      <td><%= leave.reason %></td>
      <td><%= leave.approver.first_name + " " + leave.approver.last_name %></td>
      <td><%= leave.leave_status %></td>
      <td class="actions">
        <%= link_to('View', leave_system_path(leave), :class => 'action_view') %>
      </td>
    </tr>
    <% end %>
  </table>

</div>
